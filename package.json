{
  "name": "@dojo/interop",
  "version": "0.6.1-pre",
  "description": "Provides bindings and interoperability between Dojo 2 and other libraries",
  "engines": {
    "npm": ">=3.0.0"
  },
  "private": true,
  "homepage": "http://dojo.io",
  "bugs": {
    "url": "https://github.com/dojo/interop/issues"
  },
  "license": "BSD-3-Clause",
  "main": "main.js",
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dojo/interop.git"
  },
  "scripts": {
    "prepublish": "grunt peerDepInstall",
    "precommit": "lint-staged",
    "prettier": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "test": "grunt test"
  },
  "peerDependencies": {
    "@dojo/core": "~0.5.0",
    "@dojo/has": "~0.1.2",
    "@dojo/i18n": "~0.6.0",
    "@dojo/shim": "~0.2.7",
    "@dojo/widget-core": "~0.10.0"
  },
  "devDependencies": {
    "@dojo/loader": "~0.1.1",
    "@dojo/test-extras": "~0.6.0",
    "@types/glob": "5.0.*",
    "@types/grunt": "0.4.*",
    "@types/jsdom": "^11.0.2",
    "@types/sinon": "^2.3.4",
    "codecov.io": "0.1.6",
    "grunt": "~1.0.1",
    "grunt-dojo2": "~0.1.3",
    "grunt-tslint": "5.0.1",
    "husky": "0.14.3",
    "intern": "~4.1.0",
    "lint-staged": "6.0.0",
    "prettier": "1.9.2",
    "sinon": "^2.3.0",
    "tslint": "5.2.0",
    "typescript": "~2.6.1"
  },
  "dependencies": {
    "tslib": "~1.8.1"
  },
  "optionalDependencies": {
    "redux": "^3.7.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true,
    "parser": "typescript",
    "printWidth": 120,
    "arrowParens": "always"
  }
}
